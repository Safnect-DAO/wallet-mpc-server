<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.safnect.wallet.mpc.mapper.WalletMapper">

	<select id="getWallets" resultType="Wallet">
		select * from wallet where wallet_id in (
			<foreach collection="idList" item="id" separator=",">#{id}</foreach>
		) order by create_datetime
	</select>
	
	<select id="getWalletAccounts" resultType="WalletAccount">
		select * from wallet_account where wallet_id in (
			<foreach collection="idList" item="id" separator=",">#{id}</foreach>
		) order by wallet_id, account_index
	</select>
	
</mapper>